# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                                                   controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                                       controllers.Assets.at(path="/public", file)

GET         /logout                                                             controllers.Application.logout()

POST        /auth                                                               controllers.Application.auth()

GET         /auth                                                               controllers.Application.login()

GET         /gallery/user/:user/rate/:rate/page/:page                           controllers.Gallery.list(user: Int, rate: Int, page: Int, region: String = "all")

GET         /gallery/user/:user/rate/:rate/region/:region/page/:page            controllers.Gallery.list(user: Int, rate: Int, page: Int, region: String)

GET         /large/user/:user/rate/:rate/index/:index                           controllers.Gallery.large(user: Int, rate: Int, index: Int, region: String = "all")

GET         /large/user/:user/rate/:rate/region/:region/index/:index            controllers.Gallery.large(user: Int, rate: Int, index: Int, region: String)

GET         /large/rate/:rate/index/:index/select/:select                       controllers.Gallery.select(rate:Int, index: Int, select: Int, region: String = "all")

GET         /large/rate/:rate/region/:region/index/:index/select/:select        controllers.Gallery.select(rate:Int, index: Int, select: Int, region: String)

GET         /gallery/rate/:rate/page/:page                                      controllers.Gallery.listCurrent(rate: Int, page: Int, region: String = "all")

GET         /gallery/rate/:rate/region/:region/page/:page                       controllers.Gallery.listCurrent(rate: Int, page: Int, region: String)

GET         /large/rate/:rate/index/:index                                      controllers.Gallery.largeCurrent(rate: Int, index: Int, region: String = "all")

GET         /large/rate/:rate/region/:region/index/:index                       controllers.Gallery.largeCurrent(rate: Int, index: Int, region: String)

GET         /admin/users                                                        controllers.Admin.users()

GET         /users/edit/:id                                                     controllers.Admin.editUser(id: String)

POST        /users/save                                                         controllers.Admin.saveUser()

POST        /users/resetpasswd/:id                                              controllers.Admin.resetPassword(id: String)

GET         /admin/rounds                                                       controllers.Admin.rounds()

GET         /admin/rounds/edit/:id                                              controllers.Admin.editRound(id: String)

POST        /admin/rounds/save                                                  controllers.Admin.saveRound()

POST        /admin/setimages                                                    controllers.Admin.setImages()

POST        /admin/setround                                                     controllers.Admin.setRound()

GET         /roundstat                                                          controllers.Rounds.roundStat()


#GET         /round/:round/:region                                controllers.Gallery.round2(region: String, round:Int)

#GET         /largeRound/:round/:region/:index                    controllers.Gallery.largeRound2(region: String, index:Int, round:Int)

#GET         /selectRound/:round/:region/:pageId                  controllers.Gallery.selectRound2(region: String, pageId:Long, round:Int)

#GET         /unselectRound/:round/:region/:pageId                controllers.Gallery.unselectRound2(region: String, pageId:Long, round:Int)
