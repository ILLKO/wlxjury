# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                                                       controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                                           controllers.Assets.at(path="/public", file)

GET         /logout                                                                 controllers.Application.logout()

POST        /auth                                                                   controllers.Application.auth()

GET         /auth                                                                   controllers.Application.login()

GET         /query                                                                  controllers.Gallery.query(module:String ?= "gallery", user: Option[Int] ?= None, page: Int ?= 1, region: String ?= "all", round: Int ?= 0, rate: Option[Int] ?= None)

GET         /byrate/user/:user/page/:page                                           controllers.Gallery.byRate(user: Int, page: Int, region: String = "all", round: Int = 0)

GET         /byrate/user/:user/region/:region/page/:page                            controllers.Gallery.byRate(user: Int, page: Int, region: String, round: Int = 0)

GET         /byrate/round/:round/user/:user/page/:page                              controllers.Gallery.byRate(user: Int, page: Int, region: String = "all", round: Int)

GET         /byrate/round/:round/user/:user/region/:region/page/:page               controllers.Gallery.byRate(user: Int, page: Int, region: String, round: Int)

GET         /byrate/round/:round/user/:user/region/:region/pageid/:pageid           controllers.Gallery.byRateAt(user: Int, pageid: Long, region: String, round: Int)

GET         /gallery/user/:user/page/:page                                          controllers.Gallery.list(user: Int, page: Int, region: String = "all", round: Int = 0, rate: Option[Int] ?= None)

GET         /gallery/user/:user/region/:region/page/:page                           controllers.Gallery.list(user: Int, page: Int, region: String, round: Int = 0, rate: Option[Int] ?= None)

GET         /gallery/round/:round/user/:user/page/:page                             controllers.Gallery.list(user: Int, page: Int, region: String = "all", round: Int, rate: Option[Int] ?= None)

GET         /gallery/round/:round/user/:user/region/:region/page/:page              controllers.Gallery.list(user: Int, page: Int, region: String, round: Int, rate: Option[Int] ?= None)

GET         /gallery/round/:round/user/:user/region/:region/pageid/:pageid          controllers.Gallery.listAtId(user: Int, pageid: Long, region: String, round: Int, rate: Option[Int] ?= None)

GET         /gallery/round/:round/users/:users/page/:page                           controllers.Gallery.listByNumber(users: Int, page: Int, region: String = "all", round: Int, rate: Option[Int] ?= None)

GET         /gallery/round/:round/users/:users/region/:region/page/:page            controllers.Gallery.listByNumber(users: Int, page: Int, region: String, round: Int, rate: Option[Int] ?= None)

GET         /filelist/user/:user/page/:page                                         controllers.Gallery.fileList(user: Int, page: Int, region: String = "all", round: Int = 0, format:String ?= "wiki", rate: Option[Int] ?= None)

GET         /filelist/user/:user/region/:region/page/:page                          controllers.Gallery.fileList(user: Int, page: Int, region: String, round: Int = 0, format:String ?= "wiki", rate: Option[Int] ?= None)

GET         /filelist/round/:round/user/:user/page/:page                            controllers.Gallery.fileList(user: Int, page: Int, region: String = "all", round: Int, format:String ?= "wiki", rate: Option[Int] ?= None)

GET         /filelist/round/:round/user/:user/region/:region/page/:page             controllers.Gallery.fileList(user: Int, page: Int, region: String, round: Int, format:String ?= "wiki", rate: Option[Int] ?= None)

GET         /large/user/:user/pageid/:pageid                                        controllers.Gallery.large(user: Int, pageid: Long, region: String = "all", round:Int = 0, rate: Option[Int] ?= None, module: String ?= "gallery")

GET         /large/user/:user/region/:region/pageid/:pageid                         controllers.Gallery.large(user: Int, pageid: Long, region: String, round:Int = 0, rate: Option[Int] ?= None, module: String ?= "gallery")

GET         /large/round/:round/user/:user/pageid/:pageid                           controllers.Gallery.large(user: Int, pageid: Long, region: String = "all", round:Int, rate: Option[Int] ?= None, module: String ?= "gallery")

GET         /large/round/:round/user/:user/region/:region/pageid/:pageid            controllers.Gallery.large(user: Int, pageid: Long, region: String,round:Int, rate: Option[Int] ?= None, module: String ?= "gallery")

GET         /large/round/:round/pageid/:pageId/select/:select                       controllers.Gallery.selectByPageId(round: Int, pageId: Long, select: Int, region: String = "all", rate: Option[Int] ?= None, module: String ?= "gallery")

GET         /large/round/:round/region/:region/pageid/:pageId/select/:select        controllers.Gallery.selectByPageId(round: Int,pageId: Long, select: Int, region: String, rate: Option[Int] ?= None, module: String ?= "gallery")

GET         /gallery/page/:page                                                     controllers.Gallery.listCurrent(page: Int, region: String = "all", rate: Option[Int] ?= None)

GET         /gallery/region/:region/page/:page                                      controllers.Gallery.listCurrent(page: Int, region: String, rate: Option[Int] ?= None)

GET         /large/pageid/:pageid                                                   controllers.Gallery.largeCurrent(pageid: Long, region: String = "all", rate: Option[Int] ?= None, module: String ?= "gallery")

GET         /large/region/:region/pageid/:pageid                                    controllers.Gallery.largeCurrent(pageid: Long, region: String, rate: Option[Int] ?= None, module: String ?= "gallery")

GET         /admin/users                                                            controllers.Admin.users()

GET         /users/edit/:id                                                         controllers.Admin.editUser(id: String)

POST        /users/save                                                             controllers.Admin.saveUser()

POST        /users/resetpasswd/:id                                                  controllers.Admin.resetPassword(id: String)

GET         /admin/rounds                                                           controllers.Admin.rounds()

GET         /admin/rounds/edit/:id                                                  controllers.Admin.editRound(id: String)

POST        /admin/rounds/save                                                      controllers.Admin.saveRound()

POST        /admin/setimages                                                        controllers.Admin.setImages()

POST        /admin/setround                                                         controllers.Admin.setRound()

POST        /admin/startround                                                       controllers.Admin.startRound()

GET         /roundstat                                                              controllers.Rounds.currentRoundStat()

GET         /roundstat/:round                                                       controllers.Rounds.roundStat(round: Int)

GET         /monuments                                                              controllers.Monuments.list()

GET         /error                                                                  controllers.Application.error(message: String ?= "Unknown error")

GET         /webjars/*file                                                          controllers.WebJarAssets.at(file)

GET     /chat                           controllers.ChatApplication.index
GET     /chatFeed/:round             controllers.ChatApplication.chatFeed(round: String)
POST    /chat                       controllers.ChatApplication.postMessage


